<div class="product-reviews-section">
	{% if section.settings.title != blank %}
		<div class="section-header text-center">
			<h2>{{ section.settings.title | escape }}</h2>
		</div>
	{% endif %}
	
	<div class="product-review-slider">
		{% include 'product-review-item' %}
	</div>

	{%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
	<div class="section-button text-center">
		<a href="{{ section.settings.button_link }}" class="btn">
			{{ section.settings.button_label | escape }}
		</a>
	</div>
	{%- endif -%}
</div>
{% schema %}
{
  "name": "Product Reviews",
  "class": "products-section product-reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Hereâ€™s what Rotimatic owners have to share"
    },
	{
      "type": "text",
      "id": "button_label",
	  "label": "Button label"
	},
	{
      "type": "url",
      "id": "button_link",
	  "label": "Button link"
	}
  ],
  "blocks": [
    {
      "type": "reviews",
	  "name": "Reviews",
	  "settings": [
        {
          "type": "image_picker",
		  "id": "image",
		  "label": "Image"
		},
		{
          "type": "image_picker",
		  "id": "small_image",
		  "label": "Icon Image"
		},
		{
          "type": "text",
		  "id": "name",
		  "label": "Name"
		},
		{
          "type": "text",
		  "id": "name_id",
		  "label": "ID"
		},
		{
          "type": "richtext",
		  "id": "content",
		  "label": "Content"
		}
	  ]
	}
  ]
}
{% endschema %}
 {%-liquid
  assign ss       =     section.settings
  assign sb       =     section.blocks

  assign scssFile =     'productRotimatic.scss.css' | asset_url

  echo '<link rel="stylesheet" href="' | append: scssFile | append: '">'

  echo '<div class="section-rotimatic">'
    if section.settings.title != blank
      echo '<div class="section-header text-center">'
        echo '<h2>'
          echo section.settings.title | escape
        echo '</h2>'
      echo '</div>'
    endif

    echo '<div class="product-section-rotimatic-item">'
      include 'product-rotimatic'
    echo '</div>'
  echo '</div>'
-%}


{% schema %}
{
  "name"      :   "Product Rotimatic",
  "class"     :   "products-section bg-white product-rotimatic-section",
  "settings"  :   [
    {
      "type"    :   "text",
      "id"      :   "title",
      "label"   :   "Heading",
      "default" :   "Every Rotimatic comes complete with"
    }
  ],
  "blocks"    :   [
    {
      "type"    :   "product_rotimatic",
      "name"    :   "Product Rotimatic",
      "settings":   [
        {
          "type"    :   "image_picker",
          "id"      :   "image",
          "label"   :   "Rotimatic Image"
        },
        {
          "type"    :   "text",
          "id"      :   "title",
          "label"   :   "Rotimatic Title",
          "default" :   "Kneading kit"
        }
      ]
    }
  ]
}
{% endschema %}
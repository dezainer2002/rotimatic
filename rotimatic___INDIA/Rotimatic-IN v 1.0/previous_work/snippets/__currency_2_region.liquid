{%-liquid
  if currencyCode != blank and type != 'regionName'
    case currencyCode
      when 'SGD'
        echo 'SGP'
      when 'CAD'
        echo 'CAN'
      when 'AUD'
        echo 'AUS'
      when 'EUR'
        echo 'EUROPE'
      when 'GBP'
        echo 'United Kingdom'
      when 'USD'
        echo 'USA'
      when 'NZD'
        echo 'NZL'
      when 'AED'
        echo 'ARE'
      when 'DKK'
        echo 'DNK'
      when 'HKD'
        echo 'HKG'
      when 'NOK'
        echo 'NOR'
      when 'QAR'
        echo 'QAT'
      when 'SAR'
        echo 'SAU'
      when 'SEK'
        echo 'SWE'
    endcase
  elsif currencyCode != blank and type == 'regionName'
    case currencyCode
      when 'SGD'
        echo 'singapore'
      when 'CAD'
        echo 'canada'
      when 'AUD'
        echo 'australia'
      when 'GBP'
        echo 'united-kingdom'
      when 'USD'
        echo 'us'
      when 'NZD'
        echo 'new-zealand'
      when 'EUR'
        echo 'europe'
      when 'AED'
        echo 'united-arab-emirates'
      when 'DKK'
        echo 'denmark'
      when 'HKD'
        echo 'hong-kong'
      when 'NOK'
        echo 'norway'
      when 'QAR'
        echo 'qatar'
      when 'SAR'
        echo 'saudi-arabia'
      when 'SEK'
        echo 'sweden'
    endcase
  endif
-%}
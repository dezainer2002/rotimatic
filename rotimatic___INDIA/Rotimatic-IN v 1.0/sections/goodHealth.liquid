{%-liquid
  assign ss             =   section.settings
  assign sb             =   section.blocks

  assign scssFile       =   'goodHealth.scss.css' | asset_url

  echo '<link rel="stylesheet" href="' | append: scssFile | append: '">'

  echo '<div class="goodHealth">'

    echo '<div class="page-width dFlex">'

      assign img__        =   ss.img | img_url: '900x'
      echo '<img src="' | append: img__ | append: '" class="goodHealth__img">'

      echo '<div class="_content_">'

        echo '<h2 class="_title_">'

          echo ss.title

        echo '</h2>'

        echo '<p class="_detail_">'

          echo ss.detail | newline_to_br

        echo '</p>'

        if ss.giftBtnLabel != blank and ss.giftBtnLink != blank

          assign giftBtnLink__    =   ss.giftBtnLink | default: '#'

          echo '<a href="' | append: giftBtnLink__ | append: '" class="_giftLink_">'
            echo '<span class="_giftDGrid_">'
              echo '<svg width="18" height="22" viewBox="0 0 18 22" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="0.5" y="7.5" width="17" height="14" rx="1.5" fill="white" stroke="white"/><rect x="7.5" y="7" width="3" height="15" fill="#7ED321"/><rect y="15.5" width="3" height="18" transform="rotate(-90 0 15.5)" fill="#7ED321"/><path d="M1.5 0.5H5C6.933 0.5 8.5 2.067 8.5 4V5.5H5C3.067 5.5 1.5 3.933 1.5 2V0.5Z" fill="white" stroke="#7ED321"/><path d="M9.5 4C9.5 2.067 11.067 0.5 13 0.5H16.5V2C16.5 3.933 14.933 5.5 13 5.5H9.5V4Z" fill="white" stroke="#7ED321"/></svg>'
              echo '<span class="_text_">' | append: ss.giftBtnLabel | append: '</span>'
            echo '</span>'
          echo '</a>'

        endif

      echo '</div>'

    echo '</div>'

  echo '</div>'

  echo '<style>.goodHealth{background-color: ' | append: ss.bgColor | append: '}</style>'
-%}

{% schema %}
{
  "name"      :   "Good Health",
  "settings": [
    {
      "type"    :   "image_picker",
      "id"      :   "img",
      "label"   :   "Upload Image"
    },
    {
      "type"    :   "color",
      "id"      :   "bgColor",
      "label"   :   "Background Color",
      "default" :   "#F68945"
    },
    {
      "type"    :   "text",
      "id"      :   "title",
      "label"   :   "title",
      "default" :   "Good health is the greatest gift"
    },
    {
      "type"    :   "textarea",
      "id"      :   "detail",
      "label"   :   "Detail",
      "default" :   "There is no greater gift than knowing your loved ones are staying healthy and happy. Whether its your children studying abroad or your parents back at home. Having a reliable means to cook homemade healthy food is a blessing to anyone now more than ever"
    },
    {
      "type"    :   "text",
      "id"      :   "giftBtnLabel",
      "label"   :   "Button Label",
      "default" :   "Gift a Rotimatic"
    },
    {
      "type"    :   "url",
      "id"      :   "giftBtnLink",
      "label"   :   "Button Link"
    }

  ],
  "presets" :   [
    {
      "category"  :   "image",
      "name"      :   "Good Health"
    }
  ]
}
{% endschema %}

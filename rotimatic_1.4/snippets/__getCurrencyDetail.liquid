{%-liquid
  capture dontUse
    form 'localization'
      assign isoCode        =   form.current_currency.iso_code
      assign currencyName   =   form.current_currency.name
      assign currencySymbol =   form.current_currency.symbol
    endform
  endcapture

  if getTypeIs == 'isoCode'
    echo isoCode
  elsif getTypeIs == 'currencyName'
    echo currencyName
  elsif getTypeIs == 'currencySymbol'
    echo currencySymbol
  elsif getTypeIs == 'countryName'

    case isoCode
      when 'USD'
        echo 'us'
      when 'AUD'
        echo 'australia'
      when 'AED'
        echo 'united-arab-emirates'
      when 'CAD'
        echo 'canada'
      when 'DKK'
        echo 'denmark'
      when 'EUR'
        echo 'europe'
      when 'SGD'
        echo 'singapore'
      when 'GBP'
        echo 'united-kingdom'
      when 'NZD'
        echo 'new-zealand'
      when 'QAR'
        echo 'qatar'
      when 'SAR'
        echo 'saudi-arabia'
      when 'HKD'
        echo 'hong-kong'
      when 'NOK'
        echo 'norway'
      when 'SEK'
        echo 'sweden'
    endcase
  endif
-%}
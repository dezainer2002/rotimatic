<div class="section-here-for">
  <div class="grid">
    <div class="grid__item medium-up--one-half">
      <div class="image">
        <img class="lazyload"
          src="{{ section.settings.image | img_url: 'master' }}"
          alt="{{ section.settings.image.alt | escape }}" />
      </div>
    </div>
    <div class="grid__item medium-up--one-half">
      <div class="here-for-content">
        {% if section.settings.title != blank %}
          <h2>{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
          {{ section.settings.text }}
        {% endif %}

        {% include 'product-here-for-block' %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "We are here for you",
  "class": "products-section bg-white product-here-for-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "We are here for you"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Get 24/7 access to our tech support experts via Live chat on the Rotimatic App or speak to our experts with a call back request.</p>"
    }
  ],
  "blocks": [
    {
      "type": "here_blocks",
      "name": "Here blocks",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Remote troubleshooting"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>Wifi connectivity allows swift troubleshooting of software issues via Cloud by experts, almost instantly, at the comfort of your home.</p>"
        }
      ]
    }
  ]
}
{% endschema %}
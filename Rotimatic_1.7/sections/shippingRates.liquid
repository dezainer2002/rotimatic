{%-liquid
assign ss           =     section.settings
assign sb           =     section.blocks

for block in sb
  assign b    =   block.settings
  case block.type
    when 'shipping_country'
      comment
      echo b.price_1 | money
      endcomment
  endcase
endfor

-%}
{% schema %}
{
  "name"      :   "Shipping Rates",
  "class"     :   "shippingRatesSection",
  "settings"  :   [
    {
      "type"    :   "header",
      "content" :   "---"
    }
  ],
  "blocks"    :   [
    {
      "type"    :   "shipping_country",
      "name"    :   "Block Content",
      "settings"    :   [
        {
          "type"    :   "text",
          "id"      :   "title",
          "label"   :   "countryName",
          "default" :   "United States"
        },
        {
          "type"    :   "header",
          "content" :   "First Column"
        },
        {
          "type"    :   "text",
          "id"      :   "name_1",
          "label"   :   "Name",
          "default" :   "3-4 Months"
        },
        {
          "type"    :   "text",
          "id"      :   "description_1",
          "label"   :   "Detail"
        },
        {
          "type"    :   "text",
          "id"      :   "price_1",
          "label"   :   "Price"
        }
      ]
    }
  ]
}
{% endschema %}

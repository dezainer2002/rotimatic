<link rel="stylesheet" href="style.css">

<input type="text" name="trackingNo" id="trackingNo" value="1ZR062080475136918">



<script>
  $( document )
  .ready(function() {
    console.clear();
    getApiResponse();
  });

  async function getApiResponse() {
    try {
      const getTrackingNo   =     $( `#trackingNo` ).val();
      await $.get(`https://rotimaticus.aftership.com/api/v2/shipments?lang=en&username=rotimaticus&tracking_number=${ getTrackingNo }`, function ( r ) {
        console.log ( 'r', r );
      }, "json");
    }
    catch ( err ) {
      console.log( `ERROR getApiResponse`, err.message );
    }
  }
</script>
